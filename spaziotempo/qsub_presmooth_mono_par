#!/bin/bash

#PBS -S /bin/bash
#PBS -l select=1:ncpus=28,walltime=24:00:00
#PBS -j oe
#PBS -N presmooth_mono_par_vicini

FILENAME="src_vicini/main_presmooth_mono_k_par"

cd "${PBS_O_WORKDIR}"

# clean log
rm -f log_pmp.txt compile_pmp.txt
echo "cleaning log files..." >> log_pmp.txt

# init spack
echo "loading spack" >> log_pmp.txt
if [ ! -f "${HOME}/spack.sh" ]; then
    echo "spack configuration file not found" >> log_pmp.txt
    exit 1
fi
source "${HOME}/spack.sh" >> log_pmp.txt 2>&1

echo "loading fdapde_devel environment" >> log_pmp.txt
spack env activate fdapde_devel >> log_pmp.txt 2>&1

# check packages
EIGEN_LOC="$(spack location -i eigen)"
if [ -z "$EIGEN_LOC" ]; then
    echo "Eigen dependency not found" >> log_pmp.txt
    exit 1
fi
echo "Eigen library found at ${EIGEN_LOC}" >> log_pmp.txt

# compile
echo "compiling..." >> log_pmp.txt
g++ -o $FILENAME $FILENAME.cpp \
    -I../fdaPDE-cpp \
    -I../fdaPDE-cpp/fdaPDE/core \
    -I"$EIGEN_LOC/include/eigen3" \
    -march=native -O2 -std=c++20 >> compile_pmp.txt 2>&1

# run
echo "launching executable..." >> log_pmp.txt
./$FILENAME >> log_pmp.txt 2>&1
